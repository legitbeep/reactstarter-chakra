{
  "name": "vite-react-chakra",
  "version": "1.0.0",
  "private": true,
  "author": "legitbeep",
  "description": "A quick starter template for react with chakra ui and typescript using vite, with all the lints.",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "format": "prettier --write src",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.2",
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@fontsource/inter": "^4.5.1",
    "@fontsource/raleway": "^4.5.0",
    "framer-motion": "^4.1.17",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/next": "^9.0.0",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-helmet": "^6.1.4",
    "@vitejs/plugin-react": "^1.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "commitlint": "^15.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.0.3",
    "path": "^0.12.7",
    "prettier": "2.4.1",
    "standard-version": "^9.3.2",
    "typescript": "^4.3.2",
    "vite": "^2.6.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run format",
      "npx commitlint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/legitbeep/reactstarter-chakra"
  },
  "bugs": {
    "type": "git",
    "url": "https://github.com/legitbeep/reactstarter-chakra/issues"
  }
}
